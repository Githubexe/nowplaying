<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginLeft="210dp"
    android:layout_gravity="left">

    <!--timeline bar | image1 | image2 | player or event title | time-->
    <View
        android:id="@+id/timeline_bar_view"
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/away_image_view1"
        android:layout_width="14dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true" />


    <ImageView
        android:id="@+id/away_image_view2"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="10dp"
        android:layout_gravity="left"/>

    <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/away_main_text_view"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:maxLines="1"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/away_sub_text_view"
                android:layout_below="@id/away_main_text_view"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="13dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textColor="#ff9e9e9e"
                android:alpha="0.72"
                android:textSize="9sp"/>
    </RelativeLayout>

</LinearLayout>