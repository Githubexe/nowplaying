<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_marginLeft="210dp"
    android:layout_gravity="left">

    <!--timeline bar | large icon | small icon | player or event title | time-->
    <View
        android:id="@+id/timeline_bar_view"
        android:layout_width="5dp"
        android:layout_height="30dp"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/away_large_image_view"
        android:layout_width="14dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true" />


    <ImageView
        android:id="@+id/away_small_image_view"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="10dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/away_comment_text_view"
        android:layout_alignParentTop="true"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:gravity="right|center_vertical"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/away_time_text_view"
        android:layout_alignParentTop="true"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_gravity="center|left"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#ff9e9e9e"
        android:textSize="32sp"/>

</LinearLayout>