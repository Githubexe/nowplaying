<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/away_small_image_view"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="10dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/away_comment_text_view"
        android:layout_toRightOf="@id/away_small_image_view"
        android:layout_alignParentTop="true"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="-26dp"
        android:layout_gravity="left"
        android:textSize="12sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/away_time_text_view"
        android:layout_toRightOf="@id/away_comment_text_view"
        android:layout_alignParentTop="true"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_gravity="center|right"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ff9e9e9e"
        android:textSize="32sp"/>

</RelativeLayout>