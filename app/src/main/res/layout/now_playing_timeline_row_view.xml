<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/leftText"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:text="left player">
            </TextView>

            <ImageView
                android:id="@+id/leftCard"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_toRightOf="@id/leftText"
                android:gravity="left"
                android:layout_alignTop="@id/leftText"
                android:src="@drawable/yellow_card_small" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           >

            <View
                android:layout_marginLeft="20dp"
                android:id="@+id/left_marker"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/marker"/>

            <View
                android:id="@+id/timeline_bar"
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/left_marker"
                android:background="@android:color/white" />

            <View
                android:layout_marginRight="30dp"
                android:id="@+id/right_marker"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/timeline_bar"
                android:background="@drawable/marker"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rightText"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:text="right player">
            </TextView>

            <ImageView
                android:id="@+id/rightCard"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_toRightOf="@id/rightText"
                android:gravity="left"
                android:layout_alignTop="@id/rightText"
                android:src="@drawable/yellow_card_small" />
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>