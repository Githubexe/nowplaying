<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/now_playing_score"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/now_playing_host_team_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="60dp"
            android:text="4"/>

        <TextView
            android:id="@+id/now_playing_score_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/now_playing_host_team_score_text"
            android:textStyle="bold"
            android:textSize="60dp"
            android:text = "-"/>

        <TextView
            android:id="@+id/now_playing_visiting_team_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/now_playing_score_separator"
            android:textStyle="bold"
            android:textSize="60dp"
            android:text = "2"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/now_playing_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below = "@id/now_playing_score"
        android:textSize="20dp"
        android:text="time"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/game_event_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:focusable="true"
        android:layout_below="@id/now_playing_time_text"/>

</RelativeLayout>