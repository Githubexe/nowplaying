<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/host_team_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="182px"
    android:layout_centerInParent="true"
    android:layout_alignParentLeft="true">

    <ImageView
        android:id="@+id/host_image_view"
        android:layout_width="355px"
        android:layout_height="588px"/>

    <TextView
        android:id="@+id/host_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/host_image_view"
        android:layout_alignRight="@id/host_image_view"
        android:gravity="right"
        android:textSize="30dp"/>
</RelativeLayout>