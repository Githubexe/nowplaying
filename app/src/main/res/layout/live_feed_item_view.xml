<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/leftEventText"
        android:layout_width="150dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/leftEventTimeText"
            android:layout_alignParentTop="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff9e9e9e"
            android:textSize="33dp"/>

        <TextView
            android:id="@+id/leftEventDescriptionText"
            android:layout_alignParentTop="true"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/leftEventTimeText"
            android:layout_marginLeft="-50dp"
            android:layout_gravity="left"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/leftEventImage"
            android:layout_toRightOf="@id/leftEventDescriptionText"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_width="10dp"
            android:layout_gravity="left"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/leftMarkerImage"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true" />

        <View
            android:id="@+id/timeline_bar"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/leftMarkerImage"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/rightMarkerImage"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/timeline_bar"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightEventText"
        android:layout_width="150dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/rightEventImage"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_width="10dp"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/rightEventDescriptionText"
            android:layout_toRightOf="@id/rightEventImage"
            android:layout_alignParentTop="true"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="-50dp"
            android:layout_gravity="left"
            android:gravity="center"/>

        <TextView
            android:id="@+id/rightEventTimeText"
            android:layout_toRightOf="@id/rightEventDescriptionText"
            android:layout_alignParentTop="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff9e9e9e"
            android:textSize="33dp"/>

    </RelativeLayout>

</LinearLayout>
